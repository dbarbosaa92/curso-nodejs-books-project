<section class="detail">
    <a href="/books" class="link">Voltar para lista</a>
    <div class="card detail-card">
        <p class="eyebrow">Detalhes</p>
        <h1>{{book.title}}</h1>
        <p class="lead">Este livro tem {{book.pageqty}} paginas.</p>
        <div class="actions">
            <a href="/books/edit/{{book.id}}" class="btn">Editar</a>
            <form action="/books/remove/{{book.id}}" method="POST">
                <input type="submit" value="Remover" class="btn btn-danger">
            </form>
        </div>
    </div>
</section>
