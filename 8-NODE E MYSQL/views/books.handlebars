<section class="page-header">
    <div>
        <p class="eyebrow">Catalogo</p>
        <h1>Livros disponiveis</h1>
    </div>
    <a href="/" class="btn btn-ghost">Adicionar livro</a>
</section>

<div class="grid">
    {{#each books}}
    <article class="card book-card">
        <p class="book-id">#{{this.id}}</p>
        <h2 class="book-title">
            <a href="/books/{{this.id}}">{{this.title}}</a>
        </h2>
        <p class="book-meta">{{this.pageqty}} paginas</p>
    </article>
    {{/each}}
</div>
