<section class="hero">
    <div class="hero-text">
        <p class="eyebrow">Edicao</p>
        <h1>Edite seu livro</h1>
        <p class="lead">Atualize titulo e quantidade de paginas.</p>
    </div>
    <form action="/books/updatebook" method="POST" class="card form">
        <input type="hidden" name="id" value="{{book.id}}">
        <div class="form-control">
            <label for="title">Titulo</label>
            <input type="text" id="title" name="title" placeholder="Digite o titulo do livro" value="{{book.title}}" required>
        </div>
        <div class="form-control">
            <label for="pageqty">Numero de paginas</label>
            <input type="number" id="pageqty" name="pageqty" placeholder="Quantidade de paginas" value="{{book.pageqty}}" min="1" required>
        </div>
        <input type="submit" value="Salvar alteracoes" class="btn">
    </form>
</section>
